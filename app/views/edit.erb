<h1>Edit Recipe</h1>
<form action="/recipes/<%= @recipe.id %>" method="POST">
    <input id="hidden" type="hidden" name="_method" value="PATCH">
    <input type="text" name="name" value="<%= @recipe.name %>" placeholder="Recipe Name">
    <input type="text" name="ingredients" value="<%= @recipe.ingredients %>" placeholder="Ingredient1, Ingredient2">
    <input type="text" name="cook_time" value="<%= @recipe.cook_time %>" placeholder="Cooking Time">
    <input type="submit">
</form>